<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:key="screen_list"
 android:title="@string/setting_sensor"
 android:summary="param setting"
 android:background="@drawable/bg02">

	<com.bagelplay.controller.BiggiFiSeekBarPreference 
		android:key="sensor_data"
		android:title="@string/setting_sensor_sensitivity"
		android:dialogTitle="@string/setting"
		android:persistent="true"/>
	 
	<CheckBoxPreference 
        android:key="sensor_dir"
        android:title="@string/setting_sensor_direction" 
        android:summary="@string/setting_sensor_direction_description"
        android:defaultValue="true" />

</PreferenceScreen>
