<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bagelplay.gameset.activity.EvaluationGameActivity">

    <com.bagelplay.gameset.evagame.view.EvaluationGameView
        android:id="@+id/eva_game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.bagelplay.gameset.evagame.view.EvaluationGameView>


    <com.bagelplay.gameset.view.GameProgressView
        android:id="@+id/gp_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:max_size="16"
        android:visibility="gone"
        >

    </com.bagelplay.gameset.view.GameProgressView>

    <!--暂停按钮-->
    <com.bagelplay.gameset.view.PauseButtonView
        android:id="@+id/pause_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

    </com.bagelplay.gameset.view.PauseButtonView>

    <!--停止暂停-->
    <com.bagelplay.gameset.view.ReleaseButtonView
        android:id="@+id/release_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </com.bagelplay.gameset.view.ReleaseButtonView>

</FrameLayout>
